<?xml version="1.0" encoding="UTF-8"?>
<html xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="http://design.xsd">
    <head>
        <meta charset="UTF-8" name="package-mapping" content="demo:com.wcs.designxsd.demo.person"/>
    </head> 
    <body> 
        <v-vertical-layout spacing="true">
            <v-grid _id="xmlGrid" caption="XML" data-item-type="com.wcs.designxsd.demo.person.Person">
                <table>
                    <colgroup>
                        <col column-id="firstName" sortable=""/>
                        <col column-id="lastName" sortable=""/>
                        <col column-id="birth" sortable=""/>
                    </colgroup>
                    <thead>
                        <tr default="true">
                            <th column-ids="firstName">
                                First name
                            </th>
                            <th column-ids="lastName">
                                Last name
                            </th>
                            <th column-ids="birth">
                                Birth
                            </th>
                        </tr>
                    </thead>
                </table>
            </v-grid>
        </v-vertical-layout>    
    </body>
</html>
